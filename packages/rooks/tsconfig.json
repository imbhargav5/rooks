{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["*"]
    },
    "rootDir": "src",
    "strict": false,
    "module": "esnext",
    "jsx": "react",
    "target": "esnext",
    "composite": true,
    "baseUrl": "src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "build"
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "scripts",
    "docs",
    "versioned_docs",
    "versioned_sidebars",
    "src/pages",
    "src/css",
    "src/theme"
  ],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
